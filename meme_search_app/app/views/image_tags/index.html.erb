<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <% content_for :title, "Image tags" %>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Image tags</h1>
    <%= link_to "New image tag", new_image_tag_path, class: "new-button" %>
  </div>
  <div id="image_tags" class="min-w-full">
    <% @image_tags.each do |image_tag| %>
      <%= render image_tag %>
      <p>
        <%= link_to "Show this image tag", image_tag, class: "show-button" %>
      </p>
    <% end %>
  </div>
</div>

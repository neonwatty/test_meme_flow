<%= form_with model: [:settings, tag_name], class: "contents" do |form| %>
  <div class="w-1/2 h-2/3" data-controller="color-picker">
    <div class="mt-3 flex items-center" data-controller="color-preview">
      <p data-color-preview-target="preview" class="h-10 w-10 mr-2 rounded-full text-2xl text-white text-center" style="background-color: <%= tag_name.color || '#ba1e03' %>; color: #fff; padding-top: 1px;">A</p>
      <span class="ml-2">
        <div class="flex rounded-md shadow-sm">
          <span class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500">#</span>
          <%= form.text_field :color, 
      id: 'hex_color_bg', 
      value: tag_name.color || '#ba1e03',
      data: { action: "input->color-preview#update", color_preview_target: "color" }, 
      type: 'color',
      class: "focus:ring-indigo-500 focus:border-indigo-500 block shadow-sm sm:text-sm border-gray-300 flex-1 rounded-r-md mt-0 w-24 h-8 px-1 py-1 border" %>
        </div>
      </span>
    </div>
  </div>
  <%= form.text_field :name, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-1/2 text-black", id:"new_tag_name_text_area" %>
  <div class="inline">
    <%= form.submit "Save", class: "submit-button" %>
  </div>
<% end %>